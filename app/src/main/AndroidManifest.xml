<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="mobi.maptrek">

    <uses-feature
        android:name="android.hardware.location"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.location.gps"
        android:required="false" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <permission android:name="${applicationId}.READ_FILES" />
    <permission android:name="${applicationId}.WRITE_FILES" />

    <application
        android:name="mobi.maptrek.MapTrekApplication"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_scheme"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:node="merge">
        <activity
            android:name=".MainActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="geo" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="http" />
                <data android:scheme="https" />
                <data android:host="osm.org" />
            </intent-filter>
        </activity>

        <service
            android:name=".location.LocationService"
            android:exported="false" />

        <service
            android:name=".location.NavigationService"
            android:exported="false" />

        <provider
            android:name="mobi.maptrek.provider.ExportProvider"
            android:authorities="${applicationId}.files"
            android:exported="true"
            android:readPermission="${applicationId}.READ_FILES"
            android:writePermission="${applicationId}.WRITE_FILES"
            android:grantUriPermissions="true" />

        <receiver
            android:name="mobi.maptrek.DownloadReceiver">
            <intent-filter>
                <action android:name="android.intent.action.DOWNLOAD_COMPLETE" />
            </intent-filter>
        </receiver>

        <receiver
            android:name="mobi.maptrek.WaypointsRestoreReceiver"
            android:exported="false">
            <intent-filter android:priority="-10">
                <action android:name="mobi.maptrek.event.WaypointsRestored" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
